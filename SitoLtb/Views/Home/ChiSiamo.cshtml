<script>

        function initAutoSlider(sliderId, intervalMs = 4000) {
        const sliderEl = document.getElementById(sliderId);
        if (!sliderEl) return;

        const cards = sliderEl.querySelectorAll('.cards');
        const totalCards = cards.length;
        if (!totalCards) return;

        let index = 0;

        function stepPx() {
          const gap = parseFloat(getComputedStyle(sliderEl).gap) || 0;
        const cardWidth = cards[0].getBoundingClientRect().width;
        return cardWidth + gap;
        }

        function go() {
            index++;

        sliderEl.style.transition = "transform 0.5s ease-in-out";
        sliderEl.style.transform = `translateX(-${stepPx() * index}px)`;

          if (index >= totalCards) {
            setTimeout(() => {
                sliderEl.style.transition = "none";
                sliderEl.style.transform = "translateX(0)";
                index = 0;
            }, 500);
          }
        }

        const timer = setInterval(go, intervalMs);

        window.addEventListener('resize', () => {
            sliderEl.style.transition = "none";
        sliderEl.style.transform = `translateX(-${stepPx() * index}px)`;
        });

        // opzionale: stop quando la tab non è visibile (risparmia risorse)
        document.addEventListener('visibilitychange', () => {
          if (document.hidden) clearInterval(timer);
        });
      }

      window.addEventListener('load', () => {
            initAutoSlider('slider', 4000);           // Home
        initAutoSlider('slider-direttivo', 4000); // Chi Siamo
      });


</script>