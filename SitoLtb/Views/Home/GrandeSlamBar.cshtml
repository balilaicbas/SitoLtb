<script>
    (function () {
        const teams = ['Al Bona', 'Centoni', 'Comala', 'La Cricca', 'Doppio Malto', 'LTB'];
        let idx = 0;

        const nameEl = document.getElementById('currentTeamName');
        const cards = teams.map((_, i) => document.getElementById('team' + i)).filter(Boolean);

        function show(i) {
            idx = (i + cards.length) % cards.length;
            cards.forEach((c, k) => c.classList.toggle('d-none', k !== idx));
            if (nameEl) nameEl.textContent = teams[idx] ?? '';
        }

        document.getElementById('prevTeam')?.addEventListener('click', () => show(idx - 1));
        document.getElementById('nextTeam')?.addEventListener('click', () => show(idx + 1));

        document.addEventListener('keydown', e => {
            if (e.key === 'ArrowLeft') show(idx - 1);
            if (e.key === 'ArrowRight') show(idx + 1);
        });

        show(0);
    })();
</script>
