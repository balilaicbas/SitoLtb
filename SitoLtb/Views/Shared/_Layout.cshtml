<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Libero Torneificio del Borgo: da 15 anni scacchi e bar a un altro livello!" />
    <title>Home | Libero Torneificio del Borgo</title>
    <link rel="icon" type="image/png" href="/images/logo_LTB_Site_Icon.png">
    <link rel="stylesheet" href="/css/layout.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-tilt/1.8.1/vanilla-tilt.min.js"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin="" />
</head>
<body>
    <div class="header">

    <header class="main-header">
        <div class="logo-title">
            <img src="/images/logo_LTB_Site_Icon.png" alt="Logo LTB" />
            <a asp-controller="Home" asp-action="Index">Libero Torneificio del Borgo</a>
        </div>
            <button class="nav-toggle" type="button" aria-controls="main-nav" aria-expanded="false">
                <span class="sr-only">Apri menu</span>
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </button>

            <nav class="main-navbar" id="main-nav" aria-label="Menu principale">
                <ul class="menu">
                    <!-- TORNEI -->
                    <li class="has-submenu">
                        <a asp-controller="Home" asp-action="Preiscrizione" aria-haspopup="true">
                            Tornei
                        </a>

                        <ul class="submenu" aria-label="Sottomenu Tornei">
                            <li><a asp-controller="Home" asp-action="Calendario">Il calendario 2026</a></li>
                            <li><a asp-controller="Home" asp-action="Preiscrizione">Preiscrizione ai tornei</a></li>
                            <li><a asp-controller="Home" asp-action="GrandeSlamBar">Grande slam dei Bar</a></li>
                        </ul>
                    </li>

                    <!-- CORSI -->
                    <li class="has-submenu">
                        <a asp-controller="Home" asp-action="Scuola3Livello" aria-haspopup="true">
                            Corsi
                        </a>

                        <ul class="submenu" aria-label="Sottomenu Scuola3Livello">
                            <li><a asp-controller="Home" asp-action="Scuola3Livello">Ltb scuola di scacchi di 3° livello</a></li>
                            <li><a asp-controller="Home" asp-action="CorsoInterno">Il corso interno</a></li>
                            <li><a asp-controller="Home" asp-action="CAT">Il CAT: Chess as Therapy</a></li>
                            <li><a asp-controller="Home" asp-action="OffertaCorsi">La nostra offerta</a></li>
                        </ul>
                    </li>

                    <!-- NOTIZIE -->
                    <li class="has-submenu">
                        <a asp-controller="Home" asp-action="Notizie" aria-haspopup="true">
                            Notizie
                        </a>

                        <ul class="submenu" aria-label="Sottomenu Notizie">
                            <li><a asp-controller="Home" asp-action="NotizieInEvidenza">In evidenza</a></li>
                            <li><a asp-controller="Home" asp-action="NotizieTornei">Tornei</a></li>
                            <li><a asp-controller="Home" asp-action="NotizieEventi">Eventi</a></li>
                            <li><a asp-controller="Home" asp-action="NotizieCis">Cis</a></li>
                        </ul>
                    </li>

                    <!-- CHI SIAMO -->
                    <li class="has-submenu">
                        <a asp-controller="Home" asp-action="ChiSiamo" aria-haspopup="true">
                            Chi siamo
                        </a>

                        <ul class="submenu" aria-label="Sottomenu Chi siamo">
                            <li><a asp-controller="Home" asp-action="ChiSiamo">Il direttivo LTB</a></li>
                            <li><a asp-controller="Home" asp-action="Iscrizione">Iscrizione e vantaggi 2026</a></li>
                            <li><a asp-controller="Home" asp-action="DoveSiamo">Dove siamo</a></li>
                            <li><a asp-controller="Home" asp-action="ParlanoDiNoi">Parlano di noi</a></li>
                        </ul>
                    </li>

                    <!-- voci normali -->
                    <li><a asp-controller="Home" asp-action="Contatti">Contatti</a></li>
                    <li><a asp-controller="Home" asp-action="DoveGiocare">Dove giocare a Torino</a></li>
                </ul>
            </nav>

    </header>
    </div>

  
        @RenderBody()


    <footer class="main-footer">
        <a href="https://wa.me/393397703130" target="_blank" rel="noopener noreferrer">
            <img src="/images/logoWhattsapp.jpg" alt="Logo WhatsApp" style="width: 60px; vertical-align: middle; margin-right: 8px;">
            Scrivici un messaggio
        </a>
    </footer>



    @await RenderSectionAsync("Scripts", required: false)
    <script>
        window.addEventListener('load', () => {
            const header = document.querySelector('.main-header');
            const btn = document.querySelector('.nav-toggle');
            const nav = document.getElementById('main-nav');
            if (!header || !btn || !nav) return;

            btn.addEventListener('click', () => {
                const isOpen = header.classList.toggle('nav-open');
                btn.setAttribute('aria-expanded', isOpen ? 'true' : 'false');
            });

            // opzionale: chiudi cliccando un link
            nav.addEventListener('click', (e) => {
                if (e.target.closest('a')) {
                    header.classList.remove('nav-open');
                    btn.setAttribute('aria-expanded', 'false');
                }
            });
        });
    </script>

</body>
</html>
