@model SitoLtb.ViewModels.LoginVM


@{
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="login-image">
        <img src="/images/fotoLogin.jpg" class="img-fluid" alt="Login Image">
    </div>
    <div class="login-form-container">
        <h1>Benvenuto!</h1>
        <form method="post" action="/Login" class="login-form">
            <div class="form-group">
                <input type="text" name="Username" placeholder="Inserisci Username..." class="form-control" />
                <span data-valmsg-for="Username" class="validation-message"></span>
            </div>
            <div class="form-group">
                <input type="password" name="Password" placeholder="Password" class="form-control" />
                <span data-valmsg-for="Password" class="validation-message"></span>
            </div>
            <div class="form-actions">
                <input type="submit" value="Login" class="submit-button" />
            </div>
        </form>
    </div>
</div>
