@model SitoLtb.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register User";
}

<main>
    <div class="title-button">
        <a asp-action="Index" asp-controller="User" class="back-button">Indietro</a>
    </div>

    <div class="reset-password-container">
        <h4>Registrazione Nuovo Utente</h4>

        <form asp-action="Register" asp-controller="User" asp-area="Admin" class="reset-password-form">
            <div class="form-group">
                <label>Nome</label>
                <input type="text" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label>Cognome</label>
                <input type="text" asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label>Username</label>
                <input type="text" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>

            <div class="form-group" style="display: flex; align-items: center; gap: 10px;">
                <input type="checkbox" class="custom-checkbox" asp-for="IsAdmin" />
                <label>Admin?</label>
            </div>

            <div class="form-actions">
                <button type="submit" class="submit-button">Registrati</button>
            </div>
        </form>
    </div>
</main>
