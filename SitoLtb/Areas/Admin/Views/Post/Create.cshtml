@model SitoLtb.ViewModels.CreatePostVM

@{
    ViewData["Title"] = "Crea Post";
}

<main>
    <div class="title-button">
        <a asp-area="Admin" asp-action="Index" asp-controller="Post">Indietro</a>
    </div>

    <div>
        <h4>Nuovo Post</h4>
    </div>

    <div class="reset-password-container">
        <form asp-action="Create" asp-controller="Post" asp-area="Admin" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Title">Titolo</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Categoria">Categoria</label>
                <select asp-for="Categoria" class="form-control">
                    <option value="tornei">Verdolina</option>
                    <option value="universita">Università</option>
                </select>
                <span asp-validation-for="Categoria" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Descrizione</label>
                <textarea id="richEditor" asp-for="Description" rows="8" class="form-control"></textarea>
                <span asp-validation-for="Description" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label>Anteprima Thumbnail</label>
                <img src="~/thumbnails/default_image.png" id="thumbnail" style="width: 100%; max-width: 250px; border-radius: 6px;" />
            </div>

            <div class="form-group">
                <label asp-for="Thumbnail">Thumbnail</label>
                <input asp-for="Thumbnail" type="file" class="form-control custom-file" />
                <span asp-validation-for="Thumbnail" class="validation-message"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="submit-button">Salva</button>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
               document.addEventListener('DOMContentLoaded', function () {
            const inputFile = document.querySelector('input[type="file"]');
            const preview = document.getElementById('thumbnail');

            if (!inputFile || !preview) {
                console.error("File input o thumbnail non trovati");
                return;
            }

            inputFile.addEventListener('change', function () {
                if (this.files && this.files[0]) {
                    preview.src = URL.createObjectURL(this.files[0]);
                }
            });
        });

    </script>
}
